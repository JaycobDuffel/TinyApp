<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color: darkorange;">
    <a class="navbar-brand" href="/urls"><b>TinyApp</b></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls" style="color: black;"><b>My URLs</b></a>
        <a class="nav-item nav-link" href="/urls/new" style="color: black;"><b>Create New URL</b></a>
      </div>
    </div>
    <div>
      <!-- You are logged in as:  <%=locals.username%>!   -->
      <%if (users[user_id]) { %>
      <form method="POST" action="/logout">
        <div class="form-row align-items-center">
          <div class="col-auto">
            <b style="padding-right: 10px;">Logged in as <%=users[user_id].email%>!</b>
            <button type="submit" class="btn mb-2" style="background-color: darkblue; color: white;">Logout</button>
          </div>
        </div>
      </form>
      <% } else { %>
      <form method="POST" action="/login">
        <div class="form-row align-items-center">
          <div class="col-auto">
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <a class="nav-item nav-link" href="/login" style="color: black;"><b>Login</b></a>
                <a class="nav-item nav-link" href="/register" style="color: black;"><b>Register</b></a>
              </div>
            </div>
      </form>
      <%}%>
          
         
    </div>
    
  </nav>
</header>